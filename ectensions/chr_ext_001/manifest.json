{
    "manifest_version": 3,
    "name": "Word Counter",
    "version": "1.0",
    "description": "A simple Chrome extension to count words on a page.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": ["activeTab"],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}